---
import { Image, Picture } from "astro:assets";
import aboutUsImg from "./assets/about-us-image.webp"; // Asegúrate de tener una imagen relevante
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
import SubTitle from "../../shared/SubTitle.astro";
import Title from "../../shared/Title.astro";
import LazyImage from "../../shared/LazyImage.astro";

const aboutUsSection = {
  headline1: "Acerca de",
  headline2: "Nuestra Empresa",
  headline3: "Comprometidos con la Excelencia",
  subheading1: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
  subheading2: "Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  subheading3: "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
  buttonText: "Contáctanos",
  backgroundImage: "about-us-background-image.jpg",
};

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section class={`relative ${className} w-full py-20`} id="about-us">
  <div class="w-full max-w-7xl mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-12">
      <!-- Contenido de texto -->
      <div class="flex flex-col text-center md:text-left">
        <Title>
          {aboutUsSection.headline1}{" "}
          <GradiantText>{aboutUsSection.headline2}</GradiantText>
        </Title>
        <SubTitle className="mt-6 leading-8">
          {aboutUsSection.subheading1}
          <br />
          {aboutUsSection.subheading2}
          <br />
          {aboutUsSection.subheading3}
        </SubTitle>
        <div class="mt-8">
          <CtaButton>{aboutUsSection.buttonText}</CtaButton>
        </div>
      </div>
      <!-- Imagen -->
      <div class="flex justify-center md:justify-end">
        <LazyImage
          src={aboutUsImg}
          alt="Imagen sobre nosotros"
          className="w-full h-auto object-cover rounded-lg shadow-lg"
        />
      </div>
    </div>
  </div>
</section>
