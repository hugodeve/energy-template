---
import heroImg from "@/components/sections/hero/assets/wind3.webp"
import CtaButton from "@/components/shared/CtaButton.astro"
import GradiantText from "@/components/shared/GradiantText.astro"
import SubTitle from "@/components/shared/SubTitle.astro"
import Title from "@/components/shared/Title.astro"
import LazyImage from "@/components/shared/LazyImage.astro"
import { useTranslations, type Lang } from "@/i18n"

const t = useTranslations(Astro.currentLocale as Lang)

export interface Props {
  className?: string
}

const { className = "" } = Astro.props
---

<section class={`relative ${className} w-full overflow-hidden`} id="hero">
  <div class="w-full pt-20 md:pt-32 pb-16 md:pb-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="w-full grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div
          class="flex flex-col items-center lg:items-start text-center lg:text-left"
        >
          <Title
            className="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight"
          >
            {
              t({
                en: "Revitalizing",
                pt: "Revitalizando",
              })
            }
            <GradiantText class="inline-block">
              {
                t({
                  en: "Your Home,",
                  pt: "Sua Casa,",
                })
              }
              <br class="hidden lg:block" />
              {
                t({
                  en: "With Expertise",
                  pt: "Com Expertise",
                })
              }
            </GradiantText>
            {
              t({
                en: "Today!",
                pt: "Hoje!",
              })
            }
          </Title>
          <SubTitle
            className="mt-6 text-lg md:text-xl lg:text-2xl leading-relaxed italic text-gray-600 dark:text-gray-300"
          >
            {
              t({
                en: "Transform your home with our renovation services",
                pt: "Transforme sua casa com nossos serviços de renovação",
              })
            }
            <br class="hidden md:block" />
            {
              t({
                en: "and enhance the beauty of your facade",
                pt: "e melhore a beleza de sua fachada",
              })
            }
            <br class="hidden md:block" />
            {
              t({
                en: "for years of lasting value.",
                pt: "por anos de valor duradouro.",
              })
            }
          </SubTitle>
          <div class="mt-8">
            <CtaButton
              class="text-lg px-8 py-4 rounded-full transition-transform hover:scale-105"
            >
              {
                t({
                  en: "Get Your Home Revamped Today!",
                  pt: "Renove sua Casa Hoje!",
                })
              }
            </CtaButton>
          </div>
        </div>
        <div class="relative">
          <div class="w-full max-w-lg mx-auto lg:mr-0">
            <LazyImage
              src={heroImg}
              alt="A picture of a wind turbine."
              className="w-full h-auto object-cover rounded-lg shadow-2xl"
            />
          </div>
          <svg
            class="fill-base-100 dark:fill-base-dark-900 absolute top-1/2 -left-24 h-full w-24 transform -translate-y-1/2 hidden lg:block"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 100 400"
            preserveAspectRatio="none"
          >
            <path d="M0 0l100 200L0 400z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary-100 to-secondary-100 dark:from-primary-900 dark:to-secondary-900 opacity-10 -z-10"
  >
  </div>
</section>
