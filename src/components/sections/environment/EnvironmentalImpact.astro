---
import Container from "../../shared/Container.astro";
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
import LazyImage from "../../shared/LazyImage.astro";
import Paragraph from "../../shared/Paragraph.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import Title2 from "../../shared/Title2.astro";
import { environmentalImpactSection } from "./data.ts";
import img from "./assets/green-hands.webp";

import { useTranslations, type Lang } from "@/i18n"

const t = useTranslations(Astro.currentLocale as Lang)

export interface Props {
  className?: string;
}

const { className } = Astro.props;

const impactPoints = [
  t({
    en: "Reducing Construction Waste",
    pt: "Reduzindo Resíduos de Construção",
  }),
  t({
    en: "Optimizing Energy Efficiency",
    pt: "Otimização da Eficiência Energética",
  }),
  t({
    en: "Conserving Water and Resources",
    pt: "Conservando Água e Recursos",
  }),
  t({
    en: "Lowering Environmental Footprint",
    pt: "Reduzindo a Pegada Ambiental",
  }),
  t({
    en: "Creating Healthier Living and Working Spaces",
    pt: "Criando Espaços de Vida e Trabalho Mais Saudáveis",
  }),
];
---

<section id="environment" class=`${className}`>
  <Container>
    <Title2>{t({
      en: "Sustainable Construction",
      pt: "Construção Sustentável",
    })}</Title2>
  </Container>
  <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12 ">
    <!-- <div
      class="max-w-md mx-auto flex midmd:w-7/12 lg:w-3/4 flex-col align-self-start text-start"
    > -->
    <div
      class="max-w-md mr-auto w-11/12 flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col"
    >
      <SubTitle2>
        {t({
          en: "Partner with Resolve for",
          pt: "Faça parceria com a Resolve para",
        })}
        <GradiantText>{t({
          en:" Sustainable Renovations",
          pt: "Renovações Sustentáveis",
        })}</GradiantText>
      </SubTitle2>
      <Paragraph>
        {t({
          en: "At Resolve, we are dedicated to implementing eco-friendly practices in home, business, and industrial renovations. By choosing our sustainable construction solutions, you contribute to:",
          pt: "Na Resolve, nos dedicamos a implementar práticas ecologicamente corretas em reformas residenciais, comerciais e industriais. Ao escolher nossas soluções de construção sustentáveis, você contribui para:",
        })}
      </Paragraph>
      <ul class="mt-8 space-y-4 text-heading-3">
        {impactPoints.slice(1).map((point, index) => (
          <li>
            <Paragraph className="font-normal">
              <span class="font-bold bg-box-bg rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>{" "}
              {point}
            </Paragraph>
          </li>
        ))}
      </ul>
      <div class="pt-10">
        <CtaButton>{t({
          en: "Learn more",
          pt: "saber mais",
        })}</CtaButton>
      </div>
    </div>
    <div
      class="midmd:max-w-none flex w-11/12 midmd:w-5/12 lg:w-1/2 midmd:h-auto"
    >
      <!-- <div
      class="max-w-md mx-auto midmd:max-w-none lg:mx-0 lg:pr-10 xl:pr-2 flex w-11/12 midmd:w-5/12 lg:w-1/4 midmd:h-[587px]"
    > -->
      <!-- <LazyImage
        src={environmentalImpactSection.visual}
        alt="environmental impact"
        height="587"
        width="388"
        class="w-full h-full object-cover rounded-2xl"
      /> -->
      <LazyImage
        src={environmentalImpactSection.visual}
        alt="environmental impact"
        width="700"
        class="w-full h-full object-cover rounded-2xl"
      />
    </div>
  </Container>
</section>
